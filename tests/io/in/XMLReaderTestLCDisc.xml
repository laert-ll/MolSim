<Simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../../../src/io/in/input_schema.xsd">
    <FileWriterParameters>
        <BaseName>testDisc</BaseName>
        <WriteFrequency>10</WriteFrequency>
    </FileWriterParameters>
    <SimulationParameters>
        <EndT>100.0</EndT>
        <DeltaT>0.1</DeltaT>
        <Gravity>-9.81</Gravity>
        <Dimension>2</Dimension>
    </SimulationParameters>
    <ThermostatParameters>
        <StartTemperature>300.0</StartTemperature>
        <TargetTemperature>300.0</TargetTemperature>
        <ApplyFrequency>100</ApplyFrequency>
        <MaxDeltaTemperature>10.0</MaxDeltaTemperature>
        <Dimension>3</Dimension>
    </ThermostatParameters>
    <LinkedCellsParameters>
        <LinkedCellsUsed>true</LinkedCellsUsed>
        <CutoffRadius>3.0</CutoffRadius>
    </LinkedCellsParameters>
    <BoundaryParameters>
        <Domain>180.0 90.0 3.0</Domain>
        <TOP>REFLECTING</TOP>
        <RIGHT>OUTFLOW</RIGHT>
        <BOTTOM>REFLECTING</BOTTOM>
        <LEFT>PERIODIC</LEFT>
        <FRONT>OFF</FRONT>
        <BACK>OFF</BACK>
    </BoundaryParameters>
    <Disc>
        <CenterCoordinates>60.0 25.0 0.0 </CenterCoordinates>
        <InitialVelocities>0.0 -10.0 0.0</InitialVelocities>
        <NumberOfParticlesAlongRadius>15</NumberOfParticlesAlongRadius>
        <Distance>1.1225</Distance>
        <Mass>1.0</Mass>
    </Disc>
</Simulation>